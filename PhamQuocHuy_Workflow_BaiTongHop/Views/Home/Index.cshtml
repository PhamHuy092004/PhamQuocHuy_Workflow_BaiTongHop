<div class="container" ng-app="myApp">
    <div ng-controller="myCtrl">
            <user-form></user-form>
        <h2>Danh sách người dùng</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Họ và tên</th>
                    <th>Số điện thoại</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Tỉnh thành</th>
                    <th>Tên tài khoản</th>
                    <th>Mật khẩu</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="user in users">
                    <td>{{user.fullName}}</td>
                    <td>{{user.phoneNumber }}</td>
                    <td>{{ formatDate(user.birthDate) }}</td>
                    <td>{{ user.gender }}</td>
                    <td>{{ user.province }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>
    </div>


</div>

